<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foto4"
    tools:context="com.example.irem.arraybook2.Main2Activity">

    <ImageView
        android:id="@+id/sayfaTutucu"
        android:layout_width="134dp"
        android:layout_height="89dp"
        android:layout_marginTop="4dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/corba1" />

    <Button
        android:id="@+id/geriButon"
        android:layout_width="63dp"
        android:layout_height="57dp"
        android:background="@drawable/arrowpng"
        android:text="GERİ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/metinTutucu"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/ileriButon"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="@drawable/arrowpng"
        android:text="İLERİ"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/metinTutucu"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/metinTutucu"
        android:layout_width="292dp"
        android:layout_height="441dp"
        android:text=""
        android:textColor="#000000"
        app:layout_constraintHorizontal_bias="0.695"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sayfaTutucu" />
</android.support.constraint.ConstraintLayout>
